<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddProductActivity">

    <EditText
        android:id="@+id/edittext_product_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Nome do Produto"
        android:layout_margin="16dp" />

    <EditText
        android:id="@+id/edittext_product_price"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="PreÃ§o do Produto"
        android:layout_below="@+id/edittext_product_name"
        android:layout_margin="16dp"
        android:inputType="numberDecimal" />

    <Button
        android:id="@+id/button_save_product"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Salvar Produto"
        android:layout_below="@+id/edittext_product_price"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp" />
</RelativeLayout>